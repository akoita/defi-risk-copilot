PROJECT_ID=your-gcp-project
DATASET=risk_copilot

# BigQuery location: US (multi-region) recommended when using bigquery-public-data
BQ_LOCATION=US

# BigQuery connection for Vertex AI remote models/functions
# For US multi-region dataset, create a US connection named vertex_us
# Console: BigQuery > Connections > +Create Connection > Cloud resource, Location=US, Name=vertex_us
# CLI: bq mk --location=US --connection --display_name=vertex_us --connection_type=CLOUD_RESOURCE vertex_us
CONNECTION_NAME=US.vertex_us
